package mg.jerytodik.business.dao;

import java.util.List;

import org.junit.Test;
import org.junit.jupiter.api.DisplayName;
import org.junit.jupiter.api.Tag;
import org.junit.jupiter.api.extension.ExtendWith;

import static org.junit.jupiter.api.Assertions.assertFalse;
import org.junit.runner.RunWith;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.test.context.ContextConfiguration;
import org.springframework.test.context.junit.jupiter.SpringExtension;
import org.springframework.test.context.junit4.SpringJUnit4ClassRunner;

import mg.jerytodik.business.config.JeriTodikConfig;
import mg.jerytodik.common.entity.JeriTodikSource;

/**
 * @author nabil andriantomanga
 */
@DisplayName("Ny test amin'izao : testan'ireo method mikasika ny DAO ny entite JeriTodikSource")
//@RunWith(SpringJUnit4ClassRunner.class)
@ExtendWith(SpringExtension.class)
//@RunWith(JUnitPlatform.class)
@ContextConfiguration(classes = JeriTodikConfig.class)

public class JeriTodikSourceRepositoryTest {

	@Autowired
	private JeriTodikSourceRepository jeriTodikSourceRepository;

	@Test
	@DisplayName("Testan'ny method JeriTodikSourceRepository#findAllActivatedJeriTodikSource")
	@Tag("Source")
	public void testFindAllActivatedJeriTodikSource() {

		final List<JeriTodikSource> sources = jeriTodikSourceRepository.findAllActivatedJeriTodikSource();
		
		assertFalse(sources.isEmpty());
	}

}
